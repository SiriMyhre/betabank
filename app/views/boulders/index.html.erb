<h1>All boulders</h1>
<% @boulders.each do |boulder| %>
  <h2><%= link_to boulder.name, boulder_path(boulder) %></h2>
  <p><%= boulder.grade %></p>
  <p>m<%= boulder.position_min %>s<%= boulder.position_sec %></p>
  <%=get_video_iframe(boulder) %>
<% end %>

<div class="container">
  <div class="row">
    <% @boulders.each do |boulder| %>

      <div class="col-xs-6">
        <h3><%= link_to boulder.name, boulder_path(boulder) %></h2>
      </div>
      <div class="col-xs-6">
        <p><%= boulder.grade %></p>
      </div>
    <% end %>
  </div>
</div>

<div class="container">
  <h1>All boulders</h1>
    <ul class="all">
      <li class="boulderdetails">
        <div class="bouldername">
          <h3>La Marie Rose</h3>
        </div>
        <div class="cragname">
          <h4>Bas Cuvier</h4>
        </div>
        <div class="grade">
          <h4>6A</h4>
        </div>
      </li>
    </ul>
</div>



